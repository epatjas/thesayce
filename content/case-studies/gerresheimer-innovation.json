                "type": "li",
                "children": [
                  {
                    "type": "lic",
                    "children": [
                      {
                        "type": "text",
                        "text": "Every change requires compliance validation (FDA, EMA regulations)"
                      }
                    ]
                  }
                ]
              },
              {
                "type": "li",
                "children": [
                  {
                    "type": "lic",
                    "children": [
                      {
                        "type": "text",
                        "text": "Engineers optimized for risk avoidance, not experimentation"
                      }
                    ]
                  }
                ]
              },
              {
                "type": "li",
                "children": [
                  {
                    "type": "lic",
                    "children": [
                      {
                        "type": "text",
                        "text": "No budget or mandate for exploratory work"
                      }
                    ]
                  }
                ]
              },
              {
                "type": "li",
                "children": [
                  {
                    "type": "lic",
                    "children": [
                      {
                        "type": "text",
                        "text": "Innovation was everyone's side project and no one's priority"
                      }
                    ]
                  }
                ]
              }
            ]
